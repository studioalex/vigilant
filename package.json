{
  "name": "vigilant",
  "version": "0.1.0",
  "description": "Viligant Project",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studioalex/vigilant.git"
  },
  "keywords": [
    "monorepo",
    "turbo",
    "vue",
    "fastify",
    "neo4j",
    "graphql"
  ],
  "author": "Alexander Vu <alexander.vu.tuyet@gmail.com>",
  "bugs": {
    "url": "https://github.com/studioalex/vigilant/issues"
  },
  "homepage": "https://github.com/studioalex/vigilant#readme",
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "outputs": [
          "coverage/**",
          ".nyc_output/**"
        ],
        "dependsOn": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "clean": {
        "outputs": []
      }
    }
  }
}
