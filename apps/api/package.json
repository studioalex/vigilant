{
  "name": "@studioalex/viligant-api",
  "version": "0.1.0",
  "description": "API build on fastify, neo4j and graphql",
  "license": "UNLICENSED",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "=16",
    "npm": "=8"
  },
  "scripts": {
    "start": "NODE_ENV=production fastify start -l info -a 0.0.0.0 api.js",
    "dev": "NODE_ENV=development fastify start -w -l info -P api.js",
    "debug": "NODE_ENV=debug fastify start -w -l info -P api.js",
    "lint": "xo",
    "test": "tap lib/**/*.test.js | tnyan",
    "test:detail": "tap lib/**/*.test.js",
    "test:report": "tap lib/**/*.test.js  --coverage-report=html",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "keywords": [
    "api",
    "graph-ql",
    "fastify",
    "neo4j"
  ],
  "author": "Alexander Vu <alexander.vu.tuyet@gmail.com>",
  "private": true,
  "dependencies": {
    "@graphql-tools/merge": "^8.2.1",
    "@ladjs/graceful": "^1.1.4",
    "@neo4j/graphql": "^2.5.5",
    "@neo4j/graphql-ogm": "^2.5.5",
    "apollo-server-core": "^3.6.1",
    "apollo-server-fastify": "^3.6.1",
    "bcrypt": "^5.0.1",
    "bree": "^7.1.5",
    "crypto-random-string": "^4.0.0",
    "dotenv": "^14.1.1",
    "ejs": "^3.1.6",
    "fastify": "^3.25.3",
    "fastify-autoload": "^3.10.0",
    "fastify-cli": "^2.14.0",
    "fastify-compress": "^4.0.1",
    "fastify-env": "^2.1.1",
    "fastify-helmet": "^7.0.0",
    "fastify-multipart": "^5.2.1",
    "fastify-sensible": "^3.1.2",
    "graphql": "15.8.0",
    "html-to-text": "^8.1.0",
    "jose": "^4.3.8",
    "juice": "^8.0.0",
    "neo4j-driver": "^4.4.1",
    "nodemailer": "^6.7.2",
    "pino": "^7.6.3",
    "pino-pretty": "^7.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "tap": "^15.1.6",
    "tap-nyan": "^1.1.0",
    "xo": "^0.47.0"
  }
}
