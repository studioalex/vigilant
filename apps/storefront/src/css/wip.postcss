.vl_box {
  background-color: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(5px);
  padding: 1rem;
  margin: 1rem;
  min-width: 320px;
  max-width: 720px;
  width: 100%;
  border-radius: 0.3rem;
  overflow: hidden;

  &--small {
    max-width: 360px;
  }

  &--medium {
    max-width: 360px;
  }

  &--large {
    max-width: 360px;
  }
}

.vl_logo {
  &--medium {
    width: 4rem;
  }
}
